

@if(TempData.ContainsKey(ControllerExtensions.INFO_NAME)){
    var message = MessageViewModel.Deserialize(TempData[ControllerExtensions.INFO_NAME].ToString());
    @if (message.Type == MessageType.error)
    {
        <div class="alert alert-warning mt-3 alert-dismissible fade show" role="alert">
            @Html.Raw(message.Message)
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    else
    {
        <div class="alert alert-success mt-3 alert-dismissible fade show" role="alert">
            @Html.Raw(message.Message)
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
}    
