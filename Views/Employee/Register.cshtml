@model UserModelDto
@{
    bool isAlterating = ViewContext.RouteData.Values.ContainsKey("id");
    if (isAlterating)
        ViewBag.Subtitulo = "Alteração de Usuário";
    else
        ViewBag.Subtitulo = "Cadastro de Usuário";
}


<div>
    <form asp-action="Register" class="mb-3">

        <div class="mb-3">
            <label asp-for="@Model.Email" class="form-label">Email</label>
            <input asp-for="@Model.Email" class="form-control" type="email" id="formFileMultiple" multiple>
        </div>
        <div class="w-100"></div>

        <div class="mb-3">
            <label asp-for="@Model.FullName" class="form-label">Nome completo</label>
            <input asp-for="@Model.FullName" class="form-control" type="text" id="formFileMultiple" multiple>
        </div>
        <div class="w-100"></div>

        <div class="mb-3">
            <label asp-for="@Model.PhoneNumber" class="form-label">Número telefone</label>
            <input asp-for="@Model.PhoneNumber" class="form-control" type="text" id="formFileMultiple" multiple>
        </div>
        <div class="w-100"></div>

        <div class="mb-3">
            <label asp-for="@Model.Cpf" class="form-label">CPF</label>
            <input asp-for="@Model.Cpf" class="form-control" type="text" id="formFileMultiple" multiple>
        </div>
        <div class="w-100"></div>

        <div class="mb-3">
            <label asp-for="@Model.Birth" class="form-label">Data Nascimento</label>
            <input asp-for="@Model.Birth" class="form-control" type="date" id="formFileMultiple" multiple>
        </div>
        <div class="w-100"></div>

        @if (!isAlterating){
            <div class="mb-3">
                <label asp-for="@Model.Password" class="form-label">Senha</label>
                <input asp-for="@Model.Password" class="form-control" type="password" id="formFileMultiple" multiple>
            </div>
            <div class="w-100"></div>
            <div class="mb-3">
                <label asp-for="@Model.ConfPassword" class="form-label">Confirmação de senha</label>
                <input asp-for="@Model.ConfPassword" class="form-control" type="password" id="formFileMultiple" multiple>
            </div>
            <div class="w-100"></div>
        }

        <button class="btn btn-primary" type="submit">Enviar</button>
        <a asp-action="Index" class="btn btn-danger">Voltar</a>
    </form>
</div>
